<% @body_id = 'login' %>
<div class="col-lg-6 <%= request.path == spree.login_path ? "offset-lg-3" : "" %>">
  <div class="card mb-3">
    <div class="card-header">
      <h3 class="card-title mb-0 h6"><%= I18n.t('spree.login_as_existing') %></h3>
    </div>
    <div id="existing-customer" class="card-body" data-hook="login">
      <%= render partial: 'spree/shared/login' %>
      <div class="text-center">
        <%= I18n.t('spree.or') %>&nbsp;<%= link_to I18n.t('spree.create_a_new_account'), spree.signup_path %> | <%= link_to t('spree.forgot_password'), spree.recover_password_path %>
      </div>
      <div data-hook="login_extras"></div>
    </div>
  </div>
</div>
